{
  "builders": [
    {
      "boot_command": [
        "<tab> text append net.ifnames=0 biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "sha256:9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
      "iso_url": "iso/CentOS-7-x86_64-Minimal-1908.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
	[
	  "modifyvm",
          "{{.Name}}",
          "--nat-localhostreachable1",
          "on"	 
	],
	[
	  "modifyvm",
	  "{{.Name}}",
  	  "--nic2",
	  "hostonly",
	  "--hostonlyadapter2",
	  "VirtualBox Host-Only Ethernet Adapter #2"
	]
      ],
      "virtualbox_version_file": ".vbox_version"
    },
    {
      "boot_command": [
        "<tab> text append net.ifnames=0 biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "sha1:783eef50e1fb91c78901d0421d8114a29b998478",
      "iso_url": "http://ftp.pbone.net/pub/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "1024",
        "numvcpus": "2"
      }
    }
  ],
  "post-processors": [
    {
      "override": {
        "virtualbox": {
          "output": "centos71-x64-virtualbox.box"
        },
        "vmware": {
          "output": "centos71-x64-vmware.box"
        }
      },
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/vmware.sh",
            "scripts/cleanup.sh"
          ]
        }
      },
      "type": "shell"
    }
  ]
}

